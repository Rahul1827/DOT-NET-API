@model APICrudConsume.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Student Details</h1>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Student Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.studentId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.studentId)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.studentName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.studentName)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.age)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.age)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.studentGender)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.studentGender)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.standard)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.standard)
            </dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        <a asp-action="Edit" asp-route-id="@Model.studentId" class="btn btn-warning me-2">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
