            @model CodeFirstApproach.Models.Student

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<style>
    /* General Page Styling */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7fc;
        color: #333;
        margin: 0;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #4a90e2;
        font-size: 3rem;
        margin-bottom: 20px;
        text-shadow: 2px 2px 6px rgba(74, 144, 226, 0.4);
    }

    h4 {
        color: #4a90e2;
        font-weight: bold;
        margin-bottom: 15px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .details-container {
        max-width: 800px;
        background: linear-gradient(135deg, #ffffff, #e9f4ff);
        border-radius: 15px;
        padding: 30px;
        margin: 20px auto;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
        border: 1px solid #dce9f9;
    }

    dl {
        margin: 0;
        padding: 0;
    }

    dt {
        font-weight: bold;
        color: #555;
        font-size: 1.1rem;
        margin-bottom: 5px;
    }

    dd {
        margin: 0 0 20px 0;
        font-size: 1.1rem;
        color: #333;
        border-bottom: 1px dotted #ccc;
        padding-bottom: 5px;
    }

    /* Button Styling */
    .btn-container {
        text-align: center;
        margin-top: 20px;
    }

    .btn-primary,
    .btn-secondary {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background-color: #4a90e2;
        color: white;
        padding: 12px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
        margin: 10px;
        font-size: 1rem;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-secondary {
        background-color: #6c757d;
    }

    .btn-primary:hover {
        background-color: #007bff;
        box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.3);
        transform: translateY(-2px);
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.3);
        transform: translateY(-2px);
    }

    .btn-primary i,
    .btn-secondary i {
        margin-right: 8px;
    }

    /* Hover Effects */
    dd:hover {
        background: #f0f8ff;
        border-radius: 5px;
        padding: 5px 10px;
    }

    /* Back to List Link */
    .back-link {
        display: block;
        margin-top: 30px;
        text-align: center;
        font-size: 1.1rem;
        color: #4a90e2;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s ease-in-out;
    }

        .back-link:hover {
            color: #0066cc;
            text-decoration: underline;
        }
</style>

<h1>Student Details</h1>

<div class="details-container">
    <h4>Student Information</h4>
    <hr />
    <dl>
        <dt>Student ID</dt>
        <dd>@Html.DisplayFor(model => model.studentId)</dd>

        <dt>Name</dt>
        <dd>@Html.DisplayFor(model => model.name)</dd>

        <dt>Age</dt>
        <dd>@Html.DisplayFor(model => model.age)</dd>

        <dt>Gender</dt>
        <dd>@Html.DisplayFor(model => model.gender)</dd>

        <dt>Standard</dt>
        <dd>@Html.DisplayFor(model => model.Standard)</dd>
    </dl>

    <div class="btn-container">
        <a asp-action="Edit" asp-route-id="@Model?.studentId" class="btn-primary">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
