            @model CodeFirstApproach.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<style>
    /* General Page Styling */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7fc;
        color: #333;
        margin: 0;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #e74c3c;
        font-size: 3rem;
        margin-bottom: 20px;
        text-shadow: 2px 2px 6px rgba(231, 76, 60, 0.4);
    }

    h3 {
        color: #e74c3c;
        font-size: 2rem;
        margin-bottom: 20px;
        font-weight: bold;
    }

    h4 {
        color: #4a90e2;
        font-weight: bold;
        margin-bottom: 15px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .delete-container {
        max-width: 800px;
        background: linear-gradient(135deg, #ffffff, #f9f9f9);
        border-radius: 15px;
        padding: 30px;
        margin: 20px auto;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
        border: 1px solid #f5f5f5;
    }

    dl {
        margin: 0;
        padding: 0;
    }

    dt {
        font-weight: bold;
        color: #555;
        font-size: 1.1rem;
        margin-bottom: 5px;
    }

    dd {
        margin: 0 0 20px 0;
        font-size: 1.1rem;
        color: #333;
        border-bottom: 1px dotted #ccc;
        padding-bottom: 5px;
    }

    /* Button Styling */
    .btn-container {
        text-align: center;
        margin-top: 30px;
    }

    .btn-danger,
    .btn-secondary {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background-color: #e74c3c;
        color: white;
        padding: 12px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
        margin: 10px;
        font-size: 1rem;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-secondary {
        background-color: #6c757d;
    }

    .btn-danger:hover {
        background-color: #c0392b;
        box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.3);
        transform: translateY(-2px);
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.3);
        transform: translateY(-2px);
    }

    .btn-danger i,
    .btn-secondary i {
        margin-right: 8px;
    }

    /* Back to List Link */
    .back-link {
        display: block;
        margin-top: 30px;
        text-align: center;
        font-size: 1.1rem;
        color: #4a90e2;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s ease-in-out;
    }

        .back-link:hover {
            color: #0066cc;
            text-decoration: underline;
        }
</style>

<h1>Delete Student</h1>

<div class="delete-container">
    <h3>Are you sure you want to delete this student?</h3>
    <h4>Student Information</h4>
    <hr />
    <dl>
        <dt>Name</dt>
        <dd>@Html.DisplayFor(model => model.name)</dd>

        <dt>Age</dt>
        <dd>@Html.DisplayFor(model => model.age)</dd>

        <dt>Gender</dt>
        <dd>@Html.DisplayFor(model => model.gender)</dd>

        <dt>Standard</dt>
        <dd>@Html.DisplayFor(model => model.Standard)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="studentId" />
        <div class="btn-container">
            <input type="submit" value="Delete" class="btn-danger" />
            <a asp-action="Index" class="btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </form>
</div>
